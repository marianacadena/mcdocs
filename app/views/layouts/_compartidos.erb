<h5 class="label-as-block">Compartidos</h5>
<div class="drive-wrapper drive-grid-view">
  <div class="grid-items-wrapper">
    <% @mis_docs.each do |document| %>
      <div class="drive-item module text-center">
        <div class="drive-item-inner module-inner">
          <% if document.formato.to_s != "docx" %>
            <div class="drive-item-title"><%= link_to document.nombre, asset_path(url_for(document.archivo)), target: "_blank" %></div>
          <% else %>
            <div class="drive-item-title"><%= link_to document.nombre, asset_path("https://view.officeapps.live.com/op/view.aspx?src=#{url_for(document.archivo)}"), target: "_blank"%></div>
          <%end %>
          <div class="drive-item-thumb">
            <% if document.formato.to_s == "docx" %>
              <%= link_to asset_path(url_for(document.archivo)), target: "_blank" do %>
                <i class="fa fa-file-word-o text-info"></i>
              <% end %>
            <% else %>
              <%= link_to asset_path(url_for(document.archivo)), target: "_blank" do %>
                <i class="fa fa-file-pdf-o text-danger"></i>
              <% end %>
            <%end %>
          </div>
        </div>
        <div class="drive-item-footer module-footer">
          <ul class="utilities list-inline">
            <li>
              <%= link_to rails_blob_path(document.archivo, disposition: 'attachment') do%>
                <%= image_tag('descargar.png', class: "iconos", data:{original:{title: "Descargar"}})%>
              <%end %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>