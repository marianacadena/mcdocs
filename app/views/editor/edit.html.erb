<div id="fondo-editor">
  <div class="container">
    <%= form_for @doc, url: { controller: "editor", action:"create_doc", method: :post } do |form|%>
      <div class="form-group">
        <h3>Crear documento</h3>
      <%= form.cktext_area :contenido, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= form.label :nombre, value: "Nombre del documento: ", class: "col-form-label" %>
        <%= form.text_field :nombre, class: "form-control" %>
      </div>
      <div class="modal-footer">
        <%= link_to "Regresar", home_path, class: "btn btn-secondary pull-left" , id: "btn_regresar"%>
        <%= form.submit "Crear documento", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>