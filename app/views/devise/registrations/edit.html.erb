<div class="fondo_editar_usuario">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1><%= resource_name.to_s.humanize %></h1>
        <h2>Editar Perfil</h2>
        <%= link_to "Regresar", home_path, class: "btn btn-primary" %>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}, multipart: true) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="col">
          <h3>
            <%= "#{current_academico.nombre}  #{current_academico.apellidos}" %>
          </h3>

          <%= image_tag url_for(current_academico.img_perfil), class: "img-profile fluid"%>

          <%= f.label :img_perfil, value:"Imagen de perfil", class: "form-label label-as-block" %>
          <%= f.file_field :img_perfil%>
        </div>
        <div class="col">

          <div class="row">
            <div class="col">
              <%= f.label :nombre, value:"Nombre" %>
            </div>
            <div class="col">
              <%= f.text_field :nombre, autofocus: true, autocomplete: "nombre", class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.label :apellidos, value:"Apellidos" %>
            </div>
            <div class="col">
              <%= f.text_field :apellidos, autocomplete: "apellidos", class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.label :numPersonal, value:"Número de personal" %>
            </div>
            <div class="col">
              <%= f.text_field :numPersonal, autocomplete: "numPersonal", class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Esperando confirmación para: <%= resource.unconfirmed_email %></div>
            <% end %>
            <div class="col">
              <%= f.label :password %>
              <i class="form-text text-muted">(Deja en blanco si no quieres cambiarla)</i>
            </div>
            <div class="col">
              <%= f.password_field :password, value: "Nueva contraseña", class: "form-control" %>
              <% if @minimum_password_length %>
                <em class="form-text text-muted"><%= @minimum_password_length %> caracteres mínimo</em>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.label :password_confirmation, value: "Confirmación de contraseña" %>
            </div>
            <div class="col">
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.label :current_password, value: "Contraseña actual" %>
              <i class="form-text text-muted">Se necesita la contraseña actual para realizar los cambios</i>
            </div>
            <div class="col">
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control"  %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.submit "Guardar cambios", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
    <% end %>
    </div>
  </div>
</div>
